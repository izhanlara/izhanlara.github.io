---
import "../styles/globals.css";
import "../styles/blog.css";

const { titleBlog, desc, date } = Astro.props;
---

<section id="blog" class="timeline-section">
  <div class="container">
    <div class="timeline">
      <div class="timeline__event timeline__event--type1 animated fadeInUp">
        <div class="timeline__event__icon">
          <i class="lni-pencil"></i>
          <div class="timeline__event__date">{date}</div>
        </div>

        <div class="timeline__event__content">
          <div class="timeline__event__title">{titleBlog}</div>
          <div class="timeline__event__description">
            <p>{desc}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
